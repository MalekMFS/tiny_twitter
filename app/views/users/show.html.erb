<% provide(:title, @user.name) %>
<div class= "row">
  <aside class="col-md-4 pull-right">
    <section class="user_info">
      <h1 class="pull-right">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>پست ها (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, previous_label: "قبلی", next_label: "بعدی" %>
    <% end %>
  </div>
</div>

